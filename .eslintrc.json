{
    "env": {
        "node": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-console": "off",
        "no-unused-vars": [
            "error",
            {
                "argsIgnorePattern": "^_"
            }
        ],
        "space-before-function-paren": [
            "error",
            "never"
        ]
    },
    "overrides": [
        {
            "files": [
                "test/**/*.js"
            ],
            "env": {
                "jest": true
            },
            "rules": {
                "no-unused-expressions": "off"
            }
        }
    ]
}