{
    "testEnvironment": "node",
    "collectCoverageFrom": [
        "src/**/*.js",
        "bin/**/*.js",
        "!src/index.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
        "text",
        "lcov",
        "html"
    ],
    "testMatch": [
        "**/test/**/*.test.js",
        "**/test/**/*.spec.js"
    ],
    "setupFilesAfterEnv": [
        "<rootDir>/test/setup.js"
    ],
    "testTimeout": 10000,
    "verbose": true
}